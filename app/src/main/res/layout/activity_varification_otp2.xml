<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:background="#21FFC107"
    tools:context=".VarificationOtp2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            app:srcCompat="@drawable/img2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:text="OTP Varification"
            android:textAlignment="center"
            android:textColor="@color/colorTextFirst"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="348dp"
            android:layout_height="49dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="45dp"
            android:gravity="center"
            android:text="Please enter the otp sent to you"
            android:textColor="@color/colorTextSecond"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/text_mobile_show_number"
            android:layout_width="348dp"
            android:layout_height="49dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="45dp"
            android:gravity="center"
            android:textColor="@color/colorTextSecond"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputotp1"
                android:layout_width="48dp"
                android:layout_height="52dp"
                android:background="@drawable/backgroundbox"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorTextFirst"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Labelfor"
                android:hint="*"/>

            <EditText
                android:id="@+id/inputotp2"
                android:layout_width="48dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/backgroundbox"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorTextFirst"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Labelfor"
                android:hint="*"/>
            <EditText
                android:id="@+id/inputotp3"
                android:layout_width="48dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/backgroundbox"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorTextFirst"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Labelfor"
                android:hint="*"/>
            <EditText
                android:id="@+id/inputotp4"
                android:layout_width="48dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/backgroundbox"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/colorTextFirst"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Labelfor"
                android:hint="*"/>
            <EditText
                android:id="@+id/inputotp5"
                android:layout_width="48dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/backgroundbox"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/colorTextFirst"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Labelfor"
                android:hint="*"/>
            <EditText
                android:id="@+id/inputotp6"
                android:layout_width="48dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/backgroundbox"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/colorTextFirst"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="Labelfor"
                android:hint="*"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receive OTP"
                android:textColor="@color/colorTextSecond"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/textresendotp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESEND OTP"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorTextFirst"
                android:textSize="17dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/butttonotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/backgroundbutton"
            android:text="Submit"
            android:textColor="@color/colorTextFirst"
            android:textStyle="bold" />
        <ProgressBar
                android:id="@+id/progressbar_verify_otp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>




</ScrollView>